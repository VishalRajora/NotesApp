<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viss.mynotes">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyNotes">
        <activity android:name=".splashScreen.SplashScreen"
            android:theme="@style/Theme.MyNotes.NoActionBar"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.ForgotPasswordClass"
            android:theme="@style/Theme.MyNotes.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".auth.SignUpClass"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyNotes.NoActionBar" />
        <activity
            android:name=".auth.LoginClass"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyNotes.NoActionBar">
        </activity>
        <activity
            android:name=".notesActivitys.Edit_Notes"
            android:theme="@style/Theme.MyNotes.NoActionBar" />
        <activity
            android:name=".notesActivitys.VIew_Note_Activity"
            android:theme="@style/Theme.MyNotes.NoActionBar" />
        <activity
            android:name=".notesActivitys.Add_Note"
            android:theme="@style/Theme.MyNotes.NoActionBar" />
        <activity
            android:name=".mainAcitivty.MainActivity"
            android:theme="@style/Theme.MyNotes.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>