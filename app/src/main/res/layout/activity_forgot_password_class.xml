<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgotPasswordClass">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/forgotPasswrdEditText_resetpasswrd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/ic_baseline_email"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Enter Your Email"
        android:textColorHint="#3F3D56"
        android:inputType="textEmailAddress"
        android:backgroundTint="#6C63FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.13999999" />

    <Button
        android:id="@+id/SignUpButton_SIgnup"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/loginbuttnback"
        android:text="Reset Passsword"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/forgotPasswrdEditText_resetpasswrd"
        app:layout_constraintStart_toStartOf="@+id/forgotPasswrdEditText_resetpasswrd"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswrdEditText_resetpasswrd"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>